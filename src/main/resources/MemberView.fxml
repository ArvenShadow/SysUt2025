<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.ntnu.idi.idatt1005.view.household.MemberViewController">

    <!-- Header with username -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #64B5F6;">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
            <Text fx:id="usernameTitle" text="UserName tasks" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" text="Back" onAction="#handleBackButton" />
        </HBox>
    </top>

    <!-- Table to show tasks -->
    <center>
        <TableView fx:id="taskTable" prefHeight="500">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
            <columns>
                <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="120"/>
                <TableColumn fx:id="priorityColumn" text="Priority" prefWidth="100"/>
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
                <TableColumn fx:id="detailsColumn" text="Details" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <!-- Bottom with buttons -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
            <Button fx:id="filterButton" text="Filter" onAction="#handleFilterButton" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="newTaskButton" text="New Task" onAction="#handleNewTaskButton" />
        </HBox>
    </bottom>
</BorderPane>