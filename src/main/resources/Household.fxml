<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.ntnu.idi.idatt1005.view.household.HouseHoldController"
            styleClass="root"
            prefHeight="600.0" prefWidth="1000.0">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" styleClass="sidebar" prefWidth="180">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox alignment="CENTER_LEFT">
                <Label fx:id="usernameLabel" text="Hello, Admin!" styleClass="username-label"/>
            </HBox>

            <TextField fx:id="searchField" promptText="Search..." maxWidth="Infinity" styleClass="search-field"/>

            <Separator/>

            <Button fx:id="homeButton" text="Home" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button fx:id="statisticsButton" text="Statistics" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button fx:id="calendarButton" text="Calendar" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button fx:id="householdButton" text="Household" maxWidth="Infinity" styleClass="sidebar-button"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Button fx:id="logoutButton" text="Logout" maxWidth="Infinity" styleClass="logout-button"/>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <VBox spacing="10" styleClass="middle-section">
            <padding>
                <Insets top="10" right="40" bottom="10" left="40"/>
            </padding>

            <!-- âœ… Household name text binding target -->
            <Text fx:id="householdNameText" text="My Household" styleClass="household-name"/>

            <HBox spacing="10" alignment="CENTER" VBox.vgrow="ALWAYS">
                <FlowPane fx:id="membersContainer" hgap="10"
                          vgap="10"
                          alignment="CENTER"
                          HBox.hgrow="ALWAYS">
                    <!-- Member cards will be dynamically added here -->
                </FlowPane>
            </HBox>

            <HBox alignment="BOTTOM_RIGHT" spacing="10">
                <Button fx:id="addMemberButton" text="+ Add" styleClass="action-button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
