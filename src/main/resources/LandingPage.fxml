<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.ntnu.idi.idatt1005.view.landing.LandingPageController"
            styleClass="root"
            prefHeight="600.0" prefWidth="1000.0">

  <padding>
    <Insets top="30" right="30" bottom="30" left="30"/>
  </padding>

  <!-- ðŸŸª Sidebar Navigation -->
  <left>
    <VBox spacing="10" styleClass="sidebar" prefWidth="180">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
      </padding>

      <Label fx:id="usernameLabel" text="Hello, Admin!" styleClass="username-label"/>

      <Separator/>

      <Button fx:id="homeButton" text="Home" maxWidth="Infinity" styleClass="sidebar-button"/>
      <Button fx:id="householdButton" text="Household" maxWidth="Infinity" styleClass="sidebar-button"/>

      <Region VBox.vgrow="ALWAYS"/>
      <Button fx:id="logoutButton" text="Logout" maxWidth="Infinity" styleClass="logout-button"/>
    </VBox>
  </left>

  <!-- ðŸŸ¦ Center Content: Task Table -->
  <center>
    <VBox spacing="20" styleClass="middle-section">
      <padding>
        <Insets top="10" right="40" bottom="10" left="40"/>
      </padding>

      <TableView fx:id="taskTable" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
          <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100"/>
          <TableColumn fx:id="priorityColumn" text="Priority" prefWidth="100"/>
          <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="180"/>
          <TableColumn fx:id="responsibilityColumn" text="Responsibility" prefWidth="150"/>
          <TableColumn fx:id="detailsColumn" text="Details" prefWidth="200"/>
        </columns>
      </TableView>

      <HBox spacing="10" alignment="CENTER">
        <Button fx:id="filterButton" text="Filter" styleClass="action-button"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="completeTaskButton" text="Complete Task" visible="false" styleClass="action-button"/>
        <Button fx:id="newTaskButton" text="New Task" styleClass="action-button"/>
      </HBox>
    </VBox>
  </center>

  <!-- ðŸŸ¨ Right Panel: Pointers + TODO: Statistics -->
  <right>
    <VBox spacing="10" styleClass="right-panel">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
      </padding>

      <!-- ðŸ”¸ Pointers Section -->
      <TitledPane text="Pointers" styleClass="pointers-pane">
        <VBox spacing="5">
          <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="ðŸš©" style="-fx-text-fill: red;"/>
            <Label text="Tasks with less" styleClass="statistics-text"/>
          </HBox>
          <HBox spacing="5" alignment="CENTER_LEFT">
            <Region prefWidth="20"/>
            <Label text="than 1 day left" styleClass="statistics-text"/>
          </HBox>
          <HBox spacing="5" alignment="CENTER_LEFT">
            <Region prefWidth="20"/>
            <Label text="are marked red" styleClass="statistics-text"/>
          </HBox>
        </VBox>
      </TitledPane>

      <!-- ðŸ”¹ Statistics Section -->
      <TitledPane text="Statistics(Completed)" styleClass="statistics-pane">
        <VBox spacing="10">
          <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="This Week" styleClass="statistics-text"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="tasksThisWeekLabel" text="0" styleClass="statistics-value"/>
            <Label text="tasks" styleClass="statistics-text"/>
          </HBox>

          <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Last Week:" styleClass="statistics-text"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="tasksLastWeekLabel" text="0" styleClass="statistics-value"/>
            <Label text="tasks" styleClass="statistics-text"/>
          </HBox>
        </VBox>
      </TitledPane>
    </VBox>
  </right>

</BorderPane>
